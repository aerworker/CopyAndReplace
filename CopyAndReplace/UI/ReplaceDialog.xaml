        <CheckBox IsChecked="{Binding Path=(ui:ReplacementViewModel.UseRegex)}" Margin="5 5 5 2">Use regular expressions</CheckBox>
        <TextBlock Foreground="Gray"
                   Grid.Column="1"
                   Margin="5 5 5 2">(standard .NET syntax)</TextBlock>
