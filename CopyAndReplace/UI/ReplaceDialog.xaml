        <CheckBox IsChecked="{Binding Path=(ui:ReplacementViewModel.UseExactCase)}" Margin="5 2 5 5" Grid.Row="1" ToolTip="{StaticResource exactCaseTip}">Use exact case</CheckBox>
        <TextBlock Foreground="Gray"
